    <!-- 基本主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarItemBackground">@color/green_009688</item>
        <item name="colorPrimary">@color/green_009688</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/green_009688</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--无标题栏主题-->
    <style name="AppTheme.NoActionBar" parent="QMUI.Compat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--登录主题样式-->
    <style name="LoginTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/green_009688</item>
        <item name="colorPrimaryDark">@color/green_009688</item>
        <item name="colorControlNormal">@color/color_BEC0C1</item>
        <item name="colorAccent">@color/green_009688</item>
        <item name="colorControlActivated">@color/green_009688</item>
        <item name="editTextColor">@color/green_009688</item>
    </style>

    <!--
        1、使用的是Dark系列的主题,那么字体就是白色的.menu菜单背景是黑色
        2、使用的是Light系列的主题,那么字体和图标就是黑色的.menu菜单背景是白色
    -->

    <!-- ToolBar样式 -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--修改toolbar的Title颜色.正确-->
        <item name="android:textColorPrimary">@color/green_009688</item>
        <!--修改toolbar的subtitle(小标题)颜色.正确-->
        <item name="subtitleTextColor">@color/green_009688</item>
        <!--这个也正确,用这个吧-->
        <item name="colorControlNormal">@color/green_009688</item>
    </style>

    <!-- ToolBar菜单样式.-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <!--设置背景-->
        <item name="android:background">@android:color/white</item>
        <!--设置字体颜色-->
        <item name="android:textColor">@color/green_009688</item>
    </style>


    <!-- ToolBar样式.-->
    <style name="toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="toolbar_style" parent="toolbar"/>


    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--修改toolbar的Title(大标题)颜色  @android:color/holo_red_dark-->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!--修改toolbar的subtitle(小标题)颜色-->
        <item name="subtitleTextColor">@color/colorAccent</item>
        <!--修改toolbar的图标颜色.-->
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <!-- ToolBar菜单样式.-->
    <style name="popup_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置背景-->
        <item name="android:background">@color/colorAccent</item>
        <!--设置字体颜色-->
        <item name="android:textColor">@color/color_000000</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
    </style>

    <!--EditText的主題-->
    <style name="TextInputLayoutLineColor" parent="Theme.AppCompat.Light">
        <!--没有获取焦点时的颜色-->
        <item name="colorControlNormal">@color/color_BEC0C1</item>
        <!--获取焦点时的颜色-->
        <item name="colorControlActivated">@color/green_009688</item>
    </style>

    <!--浮动标签-->
    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green_009688</item>
    </style>

    <!--错误提示信息-->
    <style name="errorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!--超出计数最大长度,浮动标签,下划线,计数文字都会改变颜色-->
    <style name="counterOverflowTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!--background为广告图片加载失败或者没有网络的时候的显示的图片-->
    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/link_guide1</item>--><!--TODO 提醒：如果上传GooGlePlay需要更换这个图片为welcome_bg-->
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomTopSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomTopSheetStyle</item>
    </style>

    <style name="CustomTopSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="MainTopMenuTextStyle">
        <item name="android:textColor">@color/color_main_top_menu_text</item>
        <item name="android:textSize">@dimen/main_top_menu_text_size</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!--简单环形进度-->
    <declare-styleable name="SimpleRoundProgress">
        <!--圆环颜色-->
        <attr name="srp_roundColor" format="color" />
        <!--圆环的宽度-->
        <attr name="srp_roundWidth" format="dimension" />
        <!--圆环上的进度颜色-->
        <attr name="srp_progressColor" format="color" />
        <!--圆环上的进度宽度-->
        <attr name="srp_progressWidth" format="dimension" />
        <!--进度值的最大值，一般为100-->
        <attr name="srp_max" format="integer" />
        <!--开始角度，指定进度初始点的绘制位置-->
        <attr name="srp_startAngle" format="integer" />
        <!--样式，空心还是实心-->
        <attr name="srp_style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>

    <style name="MyDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
