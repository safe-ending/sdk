<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg_white" />

        <include
            android:id="@+id/include_main_top_toolbar"
            layout="@layout/main_top_toolbar" />

        <include
            android:id="@+id/include_main_top_tips"
            layout="@layout/main_top_tips_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/include_main_top_toolbar" />
    </RelativeLayout>

</layout>