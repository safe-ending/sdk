<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/login_arrow"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="忘记密码"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:layout_marginLeft="50dp"
        android:clickable="true"
        android:layout_marginRight="50dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/login_name_num"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:background="@drawable/loding_input_box"
            android:hint="请输入手机号码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/loding_input_box"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1.5"
                android:id="@+id/login_name_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="请输入验证码"/>
            <Button
                android:id="@+id/get_code_common"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:background="@drawable/getcode"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="12dp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/login_name_pwd"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@drawable/loding_input_box"
            android:hint="请输入密码"/>
        <ImageView
            android:id="@+id/sure"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/forget_common_selecter"/>

        <TextView
            android:id="@+id/login_has"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:text="登陆已有账号"/>
    </LinearLayout>
</RelativeLayout>
