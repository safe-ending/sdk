<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_top_menu_lock_and_del"
            layout="@layout/main_top_menu_layout" />

        <include
            android:id="@+id/include_top_menu_lock"
            layout="@layout/tpl_top_head_with_rbt"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false">

            <LinearLayout
                android:id="@+id/ll_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dot_main_bg"
                android:onClick="onViewClick"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/rl_book_name"
                android:layout_width="292dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="99dp"
                android:onClick="onViewClick"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_note_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_edit_black_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_17" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_select_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_book_name"
                android:layout_centerHorizontal="true"
                android:layout_margin="40dp"
                android:text="@string/selected_books"
                android:textColor="@color/app_tips_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_note_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start"
                android:layout_marginBottom="32dp"
                android:background="@color/colorAccent" />
        </RelativeLayout>
    </LinearLayout>

</layout>