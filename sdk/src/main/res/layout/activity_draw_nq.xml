<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_draw_board"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:onClick="onViewClick"
                android:orientation="horizontal"
                android:scaleType="matrix" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_side_bottom_gray"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextAppearance="@style/Toolbar.TitleText">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:id="@+id/rl_toolbar_label"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:background="@drawable/shape_edit_rect_black_bg">

                        <TextView
                            android:id="@+id/tv_page_label"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_edit_rect_black_bg"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="left"
                            android:hint="@string/dialog_edit_tips"
                            android:onClick="onViewClick"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:textColor="@color/color_000000"
                            android:textColorHint="#c5c5c5"
                            android:textSize="@dimen/text_size_14" />
                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl_bt_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_bt_state"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:paddingStart="10dp"
                            android:scaleType="center"
                            android:paddingEnd="5dp"
                            android:layout_gravity="center"
                            android:onClick="onViewClick" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingEnd="10dp"
                        android:scaleType="center"
                        android:paddingStart="5dp"
                        android:onClick="onViewClick"
                        android:src="@drawable/icon_more" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>


            <include
                android:id="@+id/include_drawer_bottom_menu"
                layout="@layout/drawer_bottom_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_alignParentBottom="true" />

            <include
                android:id="@+id/include_bm_colors"
                layout="@layout/bottom_menu_colors_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/include_drawer_bottom_menu"
                android:visibility="invisible" />

            <include
                android:id="@+id/include_bm_pen_size"
                layout="@layout/bottom_menu_pen_size_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/include_drawer_bottom_menu"
                android:visibility="invisible" />

            <include
                android:id="@+id/include_bm_book_bg_type"
                layout="@layout/bottom_menu_book_bg_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/include_drawer_bottom_menu"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_page_num"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/right_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="#ffffff"
            android:overScrollMode="never" />
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>