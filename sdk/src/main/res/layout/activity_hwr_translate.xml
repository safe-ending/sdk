<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_title"
            layout="@layout/tpl_top_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_hwr_tran_bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tran_edit"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginRight="50dp"
                android:background="@drawable/icon_edit_white"
                android:onClick="onViewClick" />

            <ImageView
                android:id="@+id/iv_tran_share"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@drawable/icon_share_white"
                android:onClick="onViewClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom_menu"
            android:layout_below="@id/layout_title">

            <EditText
                android:id="@+id/et_tran_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect_white_bg"
                android:enabled="false"
                android:padding="15dp"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>