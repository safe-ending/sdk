<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="140dp"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_corner"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#14B4FF"
        android:text="@string/warm_prompt"
        />
    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/location_tips"
        />

    <LinearLayout
        android:id="@+id/dialog_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/dialog_negative"
            android:layout_width="85dp"
            android:layout_height="33dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:background="@drawable/negative_btn_bg"
            android:text="@string/cancel"
            android:textColor="#FFF"
            android:textSize="14sp" />
        <Button
            android:id="@+id/dialog_positive"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/positive_btn_bg"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:layout_marginLeft="20dp"
            android:text="@string/str_setting"
            />
    </LinearLayout>
</LinearLayout>