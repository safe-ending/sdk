<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.eningqu.aipen.view.SwipeItemLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_itemType="main"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_thumbtack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="19dp"
                android:background="@drawable/icon_book" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="普通本"
                android:textColor="@color/ble_device_list_text"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_itemType="menu">

            <TextView
                android:id="@+id/tv_unlock"
                android:text="@string/menu_unlock"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@color/colors_menu_red"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </com.eningqu.aipen.view.SwipeItemLayout>
</layout>