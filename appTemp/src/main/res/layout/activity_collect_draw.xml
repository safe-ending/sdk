<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.eningqu.aipen.view.TouchImageView
        android:id="@+id/iv_draw_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:background="#FFFFFF"
        />

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/draw_top_bg"
        android:visibility="invisible"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_draw_return"
            android:layout_marginLeft="16dp"
            />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_share"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_page_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_198599"
        android:textSize="@dimen/text_size_16"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="124"
        />

    <LinearLayout
        android:id="@+id/layout_label"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@drawable/draw_bottom_bg"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/icon_page_label"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/color_198599"
            android:text="@string/label_empty_text"
            />

        <ImageView
            android:id="@+id/iv_label_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/icon_up"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
</RelativeLayout>