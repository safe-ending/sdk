<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_back_gray"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_title"
            layout="@layout/tpl_top_head_with_right_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg_white"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_side_bottom_gray">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/rl_toolbar">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_hwr_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rect_white_bg"
                            android:enabled="false"
                            android:padding="10dp"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_hwr_content_tran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rect_white_bg"
                            android:enabled="false"
                            android:padding="10dp"
                            android:textColor="#000"
                            android:textSize="14sp" />
                    </FrameLayout>

                </ScrollView>

                <RelativeLayout
                    android:id="@+id/rl_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp">

                    <FrameLayout
                        android:id="@+id/fl_hwr_edit"
                        android:layout_width="48dp"
                        android:layout_height="38dp"
                        android:onClick="onViewClick">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_hwr_edit"
                            android:padding="20dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_hwr_share"
                        android:layout_width="48dp"
                        android:layout_height="38dp"
                        android:layout_toRightOf="@id/fl_hwr_edit"
                        android:onClick="onViewClick">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_hwr_share"
                            android:padding="20dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_hwr_tran"
                        android:layout_width="48dp"
                        android:layout_height="38dp"
                        android:layout_toRightOf="@id/fl_hwr_share"
                        android:onClick="onViewClick">

                        <ImageView
                            android:id="@+id/iv_hwr_tran"
                            android:layout_width="17dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center"
                            android:padding="20dp"
                            android:src="@drawable/icon_hwr_tran"/>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/rl_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/fl_hwr_tran"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_tran_original"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_toLeftOf="@id/tv_tran_translation"
                            android:layout_weight="1"
                            android:background="@drawable/shape_switch_btn_green_left"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:onClick="onViewClick"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/tran_original"
                            android:textColor="@color/white_F5F5F5"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_tran_translation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_switch_btn_white_right"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:onClick="onViewClick"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:text="@string/tran_translation"
                            android:textColor="@color/text_color_switch_gray"
                            android:textSize="12sp" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_hw_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>