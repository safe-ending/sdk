<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/ll_draw_board"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg_white"
                android:onClick="onViewClick"
                android:scaleType="matrix" />
        </ScrollView>


        <include
            android:id="@+id/include_drawer_bottom_menu"
            layout="@layout/drawer_bottom_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentBottom="true" />

        <include
            android:id="@+id/include_right_colors"
            layout="@layout/right_color_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/include_drawer_bottom_menu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="?attr/actionBarSize"
            android:visibility="invisible" />

        <include
            android:id="@+id/include_bm_colors"
            layout="@layout/bottom_menu_colors_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@id/include_drawer_bottom_menu"
            android:visibility="visible" />

        <include
            android:id="@+id/include_bm_pen_size"
            layout="@layout/bottom_menu_pen_size_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/include_drawer_bottom_menu"
            android:visibility="invisible" />

        <include
            android:id="@+id/include_bm_book_bg_type"
            layout="@layout/bottom_menu_book_bg_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/include_drawer_bottom_menu"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_page_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

</layout>